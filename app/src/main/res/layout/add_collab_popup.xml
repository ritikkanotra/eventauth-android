<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_height="wrap_content"
        android:minHeight="600dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="400dp"
            android:layout_marginHorizontal="30dp"
            android:padding="12dp"
            android:layout_marginTop="70dp"
            android:orientation="vertical"
            android:background="@color/dark_grey"
            android:id="@+id/add_collab_popup_ll">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:foregroundTint="@android:color/black"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:hint="Enter Email">

                    <com.google.android.material.textfield.TextInputEditText
                        android:editable="true"
                        android:text="ritikkanotra1@gmail.com"
                        android:inputType="textEmailAddress"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:id="@+id/et_add_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                </com.google.android.material.textfield.TextInputLayout>

                <ImageView
                    android:id="@+id/add_collab_btn"
                    android:src="@drawable/ic_baseline_person_add_24"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:padding="10dp"
                    android:layout_height="match_parent"/>

            </LinearLayout>

            <FrameLayout
                android:layout_marginTop="12dp"
                android:background="@color/dark_grey"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

            <TextView
                android:textSize="24sp"
                android:layout_marginVertical="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Collaborators"/>

            <ListView
                android:id="@+id/collaborators_list_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginHorizontal="30dp"
            android:foreground="?attr/colorControlNormal"
            android:background="?attr/colorControlNormal"/>

        <TextView
            android:id="@+id/close_popup_btn"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="70dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/dark_grey"
            android:text="CLOSE"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="?attr/colorControlNormal"/>

    </LinearLayout>
</ScrollView>