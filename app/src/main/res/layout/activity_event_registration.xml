<!--&lt;!&ndash;            android:layout_width="match_parent"&ndash;&gt;-->
<!--&lt;!&ndash;            android:layout_height="230dp"&ndash;&gt;-->
<!--&lt;!&ndash;            layout="@layout/shimmer_event_reg_photo"/>&ndash;&gt;-->
